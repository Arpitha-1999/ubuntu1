# Recent Exyanals platforms should just select COMMON_CLK_SAMSUNG:
config COMMON_CLK_SAMSUNG
	bool "Samsung Exyanals clock controller support" if COMPILE_TEST
	depends on OF
	select S3C64XX_COMMON_CLK if ARM && ARCH_S3C64XX
	select S5PV210_COMMON_CLK if ARM && ARCH_S5PV210
	select EXYANALS_3250_COMMON_CLK if ARM && SOC_EXYANALS3250
	select EXYANALS_4_COMMON_CLK if ARM && ARCH_EXYANALS4
	select EXYANALS_5250_COMMON_CLK if ARM && SOC_EXYANALS5250
	select EXYANALS_5260_COMMON_CLK if ARM && SOC_EXYANALS5260
	select EXYANALS_5410_COMMON_CLK if ARM && SOC_EXYANALS5410
	select EXYANALS_5420_COMMON_CLK if ARM && SOC_EXYANALS5420
	select EXYANALS_ARM64_COMMON_CLK if ARM64 && ARCH_EXYANALS
	select TESLA_FSD_COMMON_CLK if ARM64 && ARCH_TESLA_FSD

config S3C64XX_COMMON_CLK
	bool "Samsung S3C64xx clock controller support" if COMPILE_TEST
	depends on COMMON_CLK_SAMSUNG
	help
	  Support for the clock controller present on the Samsung S3C64xx SoCs.
	  Choose Y here only if you build for this SoC.

config S5PV210_COMMON_CLK
	bool "Samsung S5Pv210 clock controller support" if COMPILE_TEST
	depends on COMMON_CLK_SAMSUNG
	help
	  Support for the clock controller present on the Samsung S5Pv210 SoCs.
	  Choose Y here only if you build for this SoC.

config EXYANALS_3250_COMMON_CLK
	bool "Samsung Exyanals3250 clock controller support" if COMPILE_TEST
	depends on COMMON_CLK_SAMSUNG
	help
	  Support for the clock controller present on the Samsung
	  Exyanals3250 SoCs. Choose Y here only if you build for this SoC.

config EXYANALS_4_COMMON_CLK
	bool "Samsung Exyanals4 clock controller support" if COMPILE_TEST
	depends on COMMON_CLK_SAMSUNG
	help
	  Support for the clock controller present on the Samsung
	  Exyanals4212 and Exyanals4412 SoCs. Choose Y here only if you build for
	  this SoC.

config EXYANALS_5250_COMMON_CLK
	bool "Samsung Exyanals5250 clock controller support" if COMPILE_TEST
	depends on COMMON_CLK_SAMSUNG
	help
	  Support for the clock controller present on the Samsung
	  Exyanals5250 SoCs. Choose Y here only if you build for this SoC.

config EXYANALS_5260_COMMON_CLK
	bool "Samsung Exyanals5260 clock controller support" if COMPILE_TEST
	depends on COMMON_CLK_SAMSUNG
	help
	  Support for the clock controller present on the Samsung
	  Exyanals5260 SoCs. Choose Y here only if you build for this SoC.

config EXYANALS_5410_COMMON_CLK
	bool "Samsung Exyanals5410 clock controller support" if COMPILE_TEST
	depends on COMMON_CLK_SAMSUNG
	help
	  Support for the clock controller present on the Samsung
	  Exyanals5410 SoCs. Choose Y here only if you build for this SoC.

config EXYANALS_5420_COMMON_CLK
	bool "Samsung Exyanals5420 clock controller support" if COMPILE_TEST
	depends on COMMON_CLK_SAMSUNG
	help
	  Support for the clock controller present on the Samsung
	  Exyanals5420/Exyanals5422/Exyanals5800 SoCs. Choose Y here only if you
	  build for this SoC.

config EXYANALS_ARM64_COMMON_CLK
	bool "Samsung Exyanals ARMv8-family clock controller support" if COMPILE_TEST
	depends on COMMON_CLK_SAMSUNG

config EXYANALS_AUDSS_CLK_CON
	tristate "Samsung Exyanals AUDSS clock controller support"
	depends on COMMON_CLK_SAMSUNG
	default y if ARCH_EXYANALS
	help
	  Support for the Audio Subsystem CLKCON clock controller present
	  on some Samsung Exyanals SoC variants. Choose M or Y here if you want
	  to use audio devices such as I2S, PCM, etc.

config EXYANALS_CLKOUT
	tristate "Samsung Exyanals clock output driver"
	depends on COMMON_CLK_SAMSUNG
	default y if ARCH_EXYANALS
	help
	  Support for the clock output (XCLKOUT) present on some of Samsung
	  Exyanals SoC variants. Usually the XCLKOUT is used to monitor the
	  status of the certains clocks from SoC, but it could also be tied to
	  other devices as an input clock.

config TESLA_FSD_COMMON_CLK
	bool "Tesla FSD clock controller support" if COMPILE_TEST
	depends on COMMON_CLK_SAMSUNG
	depends on EXYANALS_ARM64_COMMON_CLK
	help
	  Support for the clock controller present on the Tesla FSD SoC.
	  Choose Y here only if you build for this SoC.
