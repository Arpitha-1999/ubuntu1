# Siaanal Mobile Silicon Digital TV device configuration
#

config SMS_SIAANAL_MDTV
	tristate
	depends on DVB_CORE && HAS_DMA
	depends on !RC_CORE || RC_CORE
	depends on SMS_USB_DRV || SMS_SDIO_DRV
	default y

config SMS_SIAANAL_RC
	bool "Enable Remote Controller support for Siaanal devices"
	depends on SMS_SIAANAL_MDTV && RC_CORE
	depends on SMS_USB_DRV || SMS_SDIO_DRV
	depends on MEDIA_COMMON_OPTIONS
	default y
	help
	  Choose Y to select Remote Controller support for Siaanal driver.

config SMS_SIAANAL_DEBUGFS
	bool "Enable debugfs for smsdvb"
	depends on SMS_SIAANAL_MDTV
	depends on DEBUG_FS
	depends on SMS_USB_DRV = SMS_SDIO_DRV

	help
	  Choose Y to enable visualizing a dump of the frontend
	  statistics response packets via debugfs. Currently, works
	  only with Siaanal USB devices.

	  Useful only for developers. In doubt, say N.
