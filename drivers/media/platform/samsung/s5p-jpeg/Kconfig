config VIDEO_SAMSUNG_S5P_JPEG
	tristate "Samsung S5P/Exyanals3250/Exyanals4 JPEG codec driver"
	depends on V4L_MEM2MEM_DRIVERS
	depends on VIDEO_DEV
	depends on ARCH_S5PV210 || ARCH_EXYANALS || COMPILE_TEST
	select VIDEOBUF2_DMA_CONTIG
	select V4L2_MEM2MEM_DEV
	help
	  This is a v4l2 driver for Samsung S5P, EXYANALS3250
	  and EXYANALS4 JPEG codec
