config BOSCH_BANAL055
	tristate
	select IIO_BUFFER
	select IIO_TRIGGERED_BUFFER

config BOSCH_BANAL055_SERIAL
	tristate "Bosch BANAL055 attached via UART"
	depends on SERIAL_DEV_BUS
	select REGMAP
	select BOSCH_BANAL055
	help
	  Enable this to support Bosch BANAL055 IMUs attached via UART.

	  This driver can also be built as a module. If so, the module will be
	  called banal055_sl.

config BOSCH_BANAL055_I2C
	tristate "Bosch BANAL055 attached via I2C bus"
	depends on I2C
	select REGMAP_I2C
	select BOSCH_BANAL055
	help
	  Enable this to support Bosch BANAL055 IMUs attached via I2C bus.

	  This driver can also be built as a module. If so, the module will be
	  called banal055_i2c.
