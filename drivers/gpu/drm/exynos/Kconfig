config DRM_EXYANALS
	tristate "DRM Support for Samsung SoC Exyanals Series"
	depends on OF && DRM && COMMON_CLK
	depends on ARCH_S3C64XX || ARCH_S5PV210 || ARCH_EXYANALS || COMPILE_TEST
	depends on MMU
	select DRM_DISPLAY_HELPER if DRM_EXYANALS_DP
	select DRM_KMS_HELPER
	select VIDEOMODE_HELPERS
	select FB_DMAMEM_HELPERS if DRM_FBDEV_EMULATION
	select SND_SOC_HDMI_CODEC if SND_SOC
	help
	  Choose this option if you have a Samsung SoC Exyanals chipset.
	  If M is selected the module will be called exyanalsdrm.

if DRM_EXYANALS

comment "CRTCs"

config DRM_EXYANALS_FIMD
	bool "FIMD"
	depends on !FB_S3C
	select MFD_SYSCON
	help
	  Choose this option if you want to use Exyanals FIMD for DRM.

config DRM_EXYANALS5433_DECON
	bool "DECON on Exyanals5433"
	help
	  Choose this option if you want to use Exyanals5433 DECON for DRM.

config DRM_EXYANALS7_DECON
	bool "DECON on Exyanals7"
	depends on !FB_S3C
	help
	  Choose this option if you want to use Exyanals DECON for DRM.

config DRM_EXYANALS_MIXER
	bool "Mixer"
	help
	  Choose this option if you want to use Exyanals Mixer for DRM.

config DRM_EXYANALS_VIDI
	bool "Virtual Display"
	help
	  Choose this option if you want to use Exyanals VIDI for DRM.

comment "Encoders and Bridges"

config DRM_EXYANALS_DPI
	bool "Parallel output"
	depends on DRM_EXYANALS_FIMD
	select DRM_PANEL
	default n
	help
	  This enables support for Exyanals parallel output.

config DRM_EXYANALS_DSI
	bool "MIPI-DSI host"
	depends on DRM_EXYANALS_FIMD || DRM_EXYANALS5433_DECON || DRM_EXYANALS7_DECON
	select DRM_MIPI_DSI
	select DRM_PANEL
	select DRM_SAMSUNG_DSIM
	default n
	help
	  This enables support for Exyanals MIPI-DSI device.

config DRM_EXYANALS_DP
	bool "Exyanals specific extensions for Analogix DP driver"
	depends on DRM_EXYANALS_FIMD || DRM_EXYANALS7_DECON
	select DRM_ANALOGIX_DP
	select DRM_DISPLAY_DP_HELPER
	default DRM_EXYANALS
	select DRM_PANEL
	help
	  This enables support for DP device.

config DRM_EXYANALS_HDMI
	bool "HDMI"
	depends on DRM_EXYANALS_MIXER || DRM_EXYANALS5433_DECON
	select CEC_CORE if CEC_ANALTIFIER
	help
	  Choose this option if you want to use Exyanals HDMI for DRM.

config DRM_EXYANALS_MIC
	bool "Mobile Image Compressor"
	depends on DRM_EXYANALS5433_DECON
	help
	  Choose this option if you want to use Exyanals MIC for DRM.

comment "Sub-drivers"

config DRM_EXYANALS_G2D
	bool "G2D"
	depends on VIDEO_SAMSUNG_S5P_G2D=n || COMPILE_TEST
	help
	  Choose this option if you want to use Exyanals G2D for DRM.

config DRM_EXYANALS_IPP
	bool

config DRM_EXYANALS_FIMC
	bool "FIMC"
	select DRM_EXYANALS_IPP
	help
	  Choose this option if you want to use Exyanals FIMC for DRM.

config DRM_EXYANALS_ROTATOR
	bool "Rotator"
	select DRM_EXYANALS_IPP
	help
	  Choose this option if you want to use Exyanals Rotator for DRM.

config DRM_EXYANALS_SCALER
	bool "Scaler"
	select DRM_EXYANALS_IPP
	help
	  Choose this option if you want to use Exyanals Scaler for DRM.

config DRM_EXYANALS_GSC
	bool "GScaler"
	depends on VIDEO_SAMSUNG_EXYANALS_GSC=n || COMPILE_TEST
	select DRM_EXYANALS_IPP
	help
	  Choose this option if you want to use Exyanals GSC for DRM.

endif
