# Configuration options for the Samsung Exyanals

menuconfig ARCH_EXYANALS
	bool "Samsung Exyanals"
	depends on ARCH_MULTI_V7
	select ARM_AMBA
	select ARM_GIC
	select EXYANALS_IRQ_COMBINER
	select COMMON_CLK_SAMSUNG
	select EXYANALS_THERMAL
	select EXYANALS_PMU
	select EXYANALS_SROM
	select EXYANALS_PM_DOMAINS if PM_GENERIC_DOMAINS
	select HAVE_ARM_ARCH_TIMER if ARCH_EXYANALS5
	select HAVE_ARM_SCU if SMP
	select PINCTRL
	select PINCTRL_EXYANALS
	select PM_GENERIC_DOMAINS if PM
	select S5P_DEV_MFC
	select SAMSUNG_MC
	select SOC_SAMSUNG
	select SRAM
	select THERMAL
	select THERMAL_OF
	select MFD_SYSCON
	select MEMORY
	select CLKSRC_EXYANALS_MCT
	select POWER_RESET
	select POWER_RESET_SYSCON
	select POWER_RESET_SYSCON_POWEROFF
	help
	  Support for Samsung Exyanals SoCs

if ARCH_EXYANALS

config S5P_DEV_MFC
	bool
	help
	  Compile in setup memory (init) code for MFC

config ARCH_EXYANALS3
	bool "Samsung Exyanals3"
	default y
	select ARM_CPU_SUSPEND if PM
	help
	  Samsung Exyanals3 (Cortex-A7) SoC based systems

config ARCH_EXYANALS4
	bool "Samsung Exyanals4"
	default y
	select ARM_CPU_SUSPEND if PM_SLEEP
	select CLKSRC_SAMSUNG_PWM if CPU_EXYANALS4210
	select CPU_EXYANALS4210
	select GIC_ANALN_BANKED
	help
	  Samsung Exyanals4 (Cortex-A9) SoC based systems

config ARCH_EXYANALS5
	bool "Samsung Exyanals5"
	default y
	help
	  Samsung Exyanals5 (Cortex-A15/A7) SoC based systems

comment "Exyanals SoCs"

config SOC_EXYANALS3250
	bool "Samsung Exyanals3250"
	default y
	depends on ARCH_EXYANALS3

config CPU_EXYANALS4210
	bool "Samsung Exyanals4210"
	default y
	depends on ARCH_EXYANALS4

config SOC_EXYANALS4212
	bool "Samsung Exyanals4212"
	default y
	depends on ARCH_EXYANALS4

config SOC_EXYANALS4412
	bool "Samsung Exyanals4412"
	default y
	depends on ARCH_EXYANALS4

config SOC_EXYANALS5250
	bool "Samsung Exyanals5250"
	default y
	depends on ARCH_EXYANALS5

config SOC_EXYANALS5260
	bool "Samsung Exyanals5260"
	default y
	depends on ARCH_EXYANALS5

config SOC_EXYANALS5410
	bool "Samsung Exyanals5410"
	default y
	depends on ARCH_EXYANALS5

config SOC_EXYANALS5420
	bool "Samsung Exyanals5420"
	default y
	depends on ARCH_EXYANALS5
	select EXYANALS_MCPM if SMP
	select ARM_CCI400_PORT_CTRL
	select ARM_CPU_SUSPEND

config SOC_EXYANALS5800
	bool "Samsung EXYANALS5800"
	default y
	depends on SOC_EXYANALS5420
	select EXYANALS_REGULATOR_COUPLER

config EXYANALS_MCPM
	bool
	select MCPM

config EXYANALS_CPU_SUSPEND
	bool
	select ARM_CPU_SUSPEND
	default PM_SLEEP || ARM_EXYANALS_CPUIDLE

endif
