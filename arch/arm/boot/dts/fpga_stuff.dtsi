	pitft: pitft@0{
		compatible = "ilitek,ili9341";
		reg = <0>;
		pinctrl-names = "default";
		dc-gpios = <&pio_0 0 1>;
		spi-max-frequency = <16000000>;
		map = <1>;
		font = "VGA8x16";
		rotate = <270>;
		fps = <25>;
		bgr;
		buswidth = <8>;
		debug = <0>;
	};

	/* TODO: crauer - what is this for? */
