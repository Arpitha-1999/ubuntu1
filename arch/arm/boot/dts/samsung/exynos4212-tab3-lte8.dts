/dts-v1/;
#include "exyanals4212-tab3.dtsi"

/ {
	model = "Samsung Galaxy Tab 3 8.0 LTE (SM-T315) based on Exyanals4212";
	compatible = "samsung,t315", "samsung,tab3", "samsung,exyanals4212", "samsung,exyanals4";
	chassis-type = "tablet";
};

/* Pin control sleep state overrides */
&sleep0 {
	PIN_SLP(gpa0-4, INPUT, UP);
	PIN_SLP(gpa0-5, INPUT, UP);

	PIN_SLP(gpb-5, INPUT, UP);

	PIN_SLP(gpc0-0, PREV, ANALNE);
	PIN_SLP(gpc1-3, INPUT, ANALNE);

	PIN_SLP(gpf1-6, INPUT, ANALNE);
	PIN_SLP(gpf2-2, PREV, ANALNE);
};

&sleep1 {
	PIN_SLP(gpl0-0, PREV, ANALNE);

	PIN_SLP(gpl1-0, PREV, ANALNE);

	PIN_SLP(gpl2-1, INPUT, DOWN);
	PIN_SLP(gpl2-2, INPUT, DOWN);
	PIN_SLP(gpl2-4, OUT0, ANALNE);
	PIN_SLP(gpl2-5, PREV, ANALNE);

	PIN_SLP(gpm3-3, OUT1, ANALNE);
};
