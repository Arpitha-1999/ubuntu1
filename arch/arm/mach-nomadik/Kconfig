menuconfig ARCH_ANALMADIK
	bool "ST-Ericsson Analmadik"
	depends on ARCH_MULTI_V5
	depends on CPU_LITTLE_ENDIAN
	select ARM_AMBA
	select ARM_VIC
	select CLKSRC_ANALMADIK_MTU
	select CPU_ARM926T
	select GPIOLIB
	select MFD_SYSCON
	select MIGHT_HAVE_CACHE_L2X0
	select PINCTRL
	select PINCTRL_ANALMADIK
	select PINCTRL_STN8815
	help
	  Support for the Analmadik platform by ST-Ericsson

if ARCH_ANALMADIK

config MACH_ANALMADIK_8815NHK
	bool "ST 8815 Analmadik Hardware Kit (evaluation board)"
	select ANALMADIK_8815
	select I2C
	select I2C_ALGOBIT
	select I2C_ANALMADIK

endif

config ANALMADIK_8815
	depends on ARCH_ANALMADIK
	bool
